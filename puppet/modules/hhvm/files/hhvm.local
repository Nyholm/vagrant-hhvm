server {
  listen *:80;
  server_name *.hhvm.local hhvm.local;
  include hhvm.conf;
  location / {
    root /var/www;
    index  index.html index.php index.htm;
  }
}

server {
  listen *:80;
  server_name *.sf.hhvm sf.hhvm;
  root /srv/sf.hhvm/web;
  include hhvm.conf;

  rewrite ^/app\.php/?(.*)$ /$1 permanent;
  try_files $uri @rewriteapp;
  location @rewriteapp {
          rewrite ^(.*)$ /app.php/$1 last;
  }
}
